---
import Layout from "../layouts/Layout.astro";
import { teamHeads } from '../data/teamheads';
import TeamHeadCard from "../components/TeamHeadCard.astro"

const pageTitle = "ACM BPHC - Office"
---

<Layout title={pageTitle}>
    <div class="aboutACM flex flex-col items-center w-full mt-5">
        <span class="text-acm-blue text-4xl md:text-5xl font-bold mb-6 sm:mb-8">The Office</span>
        <section class="container mx-auto px-4 py-12 w-[80%]">
            <div class="porGrid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-24">
                {teamHeads.map((teamHeadInfo, idx) => (
                    <TeamHeadCard teamHeadInfo={teamHeadInfo} />
                ))}
            </div>
        </section>
    </div>
</Layout>