---
const { teamHeadInfo } = Astro.props;
---

<div class="bg-white shadow-lg overflow-hidden">
  <img src={teamHeadInfo.image} alt={teamHeadInfo.name} class="w-full object-cover bg-black" />
  <div class="bg-gray-700 p-6">
    <h3 class="text-gray-200 font-bold mb-2">{teamHeadInfo.name}</h3>
    <p class="text-gray-400 mb-4">{teamHeadInfo.designation}</p>
  </div>
</div>